<% if flash[:notice] %>
  <p style="color: green"><%= flash[:notice] %></p>
<% end %>

<% unless user_signed_in? %>
  <!-- Demo Mode Banner -->
  <div class="notification is-warning is-light mb-4">
    <strong>ðŸ‘€ You're viewing demo content!</strong><br>
    This is a sample diary entry to show you what Digital Diary looks like.
    <%= link_to "Sign up free", new_user_registration_path, class: "has-text-weight-bold" %> to start your own personal diary!
  </div>
<% end %>

<% if @thought_of_the_day %>
  <div class="notification is-info is-light mb-4">
    <strong>Thought of the Day:</strong><br>
    <em><%= @thought_of_the_day.content %></em>
  </div>
<% end %>

<h1><%= @diary_entry.title %></h1>
<p><strong>Date:</strong> <%= @diary_entry.entry_date %></p>
<p><strong>Mood:</strong> <%= @diary_entry.mood %></p>

<div class="content">
  <%= @diary_entry.content %>
</div>

<% if @diary_entry.images.attached? %>
  <div class="mt-4">
    <h3 class="title is-5">
      <span class="icon-text">
        <span class="icon">
          <i class="fas fa-images"></i>
        </span>
        <span>Images (<%= @diary_entry.images.count %>)</span>
      </span>
    </h3>
    <div class="columns is-multiline">
      <% @diary_entry.images.each_with_index do |image, index| %>
        <div class="column is-3">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <% begin %>
                  <%= image_tag image, 
                      class: "is-rounded", 
                      style: "width: 100%; height: 100%; object-fit: cover; cursor: pointer;",
                      onclick: "openImageModal('modal-#{index}')",
                      loading: "lazy" %>
                <% rescue => e %>
                  <div class="has-background-light has-text-centered" style="display: flex; align-items: center; justify-content: center; height: 100%;">
                    <div>
                      <i class="fas fa-exclamation-triangle has-text-warning"></i>
                      <p class="is-size-7">Image Error</p>
                    </div>
                  </div>
                <% end %>
              </figure>
            </div>
            <div class="card-content">
              <div class="content">
                <p class="is-size-7 has-text-grey">
                  <%= image.blob.filename %>
                </p>
                <p class="is-size-7 has-text-grey">
                  <%= number_to_human_size(image.blob.byte_size) %>
                </p>
                <% if user_signed_in? && current_user == @diary_entry.user %>
                  <%= form_with url: diary_entry_image_path(@diary_entry.id, image.id), method: :delete, local: true, class: "is-inline-block" do |form| %>
                    <%= form.submit "Delete", 
                        class: "button is-small is-danger is-outlined",
                        data: { confirm: "Are you sure you want to delete this image?" } %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- Modal for full-size image -->
        <div id="modal-<%= index %>" class="modal">
          <div class="modal-background" onclick="closeImageModal('modal-<%= index %>')"></div>
          <div class="modal-content">
            <p class="image">
              <%= image_tag image, style: "max-width: 90vw; max-height: 90vh; object-fit: contain;" %>
            </p>
          </div>
          <button class="modal-close is-large" onclick="closeImageModal('modal-<%= index %>')" aria-label="close"></button>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<div class="mt-4">
  <%= link_to "Edit", edit_diary_entry_path(@diary_entry), class: "button is-info" %>
  <%= link_to "Back", diary_entries_path, class: "button is-light" %>
  <%= button_to "Delete", @diary_entry, method: :delete, data: { confirm: "Are you sure?" }, class: "button is-danger" %>
</div>

<script>
function openImageModal(modalId) {
  document.getElementById(modalId).classList.add('is-active');
}

function closeImageModal(modalId) {
  document.getElementById(modalId).classList.remove('is-active');
}
</script>