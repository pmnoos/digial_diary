<p style="color: green"><%= notice %></p>

<% unless user_signed_in? %>
  <!-- Demo Mode Banner -->
  <div class="notification is-warning is-light mb-4">
    <strong>ðŸ‘€ You're viewing demo content!</strong><br>
    This is a sample diary entry to show you what Digital Diary looks like. 
    <%= link_to "Sign up free", new_user_registration_path, class: "has-text-weight-bold" %> to start your own personal diary!
  </div>
<% end %>

<% if @thought_of_the_day %>
  <!-- Thought of the Day block -->
  <div class="notification is-info is-light mb-4">
    <strong>Thought of the Day:</strong><br>
    <em><%= @thought_of_the_day.content %></em>
  </div>
<% end %>

<%= render @diary_entry %>

<% if @diary_entry.content.present? %>
  <div class="box mb-4">
    <h2 class="subtitle">Content</h2>
    <%= @diary_entry.content.body.to_s.html_safe %>
  </div>
<% end %>

<% if @diary_entry.images.attached? %>
  <div class="mb-6">
    <h2 class="subtitle has-text-weight-semibold">
      <span class="icon-text">
        <span class="icon has-text-primary">
          <i class="fas fa-images"></i>
        </span>
        <span>Photo Gallery</span>
      </span>
    </h2>
    
    <!-- Simple Image Gallery with Bulma styling (no variants) -->
    <div class="columns is-multiline is-mobile">
      <% @diary_entry.images.each_with_index do |image, index| %>
        <div class="column is-one-quarter-desktop is-one-third-tablet is-half-mobile">
          <div class="card image-card" style="transition: transform 0.2s ease, box-shadow 0.2s ease;">
            <div class="card-image">
              <figure class="image is-square">
                <%= image_tag url_for(image), 
                    alt: "Photo #{index + 1} from #{@diary_entry.title}",
                    class: "gallery-image",
                    style: "width: 100%; height: 200px; object-fit: cover; cursor: pointer; border-radius: 6px;",
                    data: { modal_target: "modal-image-#{index}" } %>
              </figure>
            </div>
          </div>
        </div>
        
        <!-- Modal for enlarged image -->
        <div id="modal-image-<%= index %>" class="modal">
          <div class="modal-background" data-modal-close="modal-image-<%= index %>"></div>
          <div class="modal-content">
            <p class="image">
              <%= image_tag url_for(image), 
                  alt: "Photo #{index + 1} from #{@diary_entry.title}",
                  style: "max-width: 90vw; max-height: 90vh; object-fit: contain;" %>
            </p>
          </div>
          <button class="modal-close is-large" data-modal-close="modal-image-<%= index %>" aria-label="close"></button>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<!-- Action Buttons -->
<div class="field is-grouped mt-5">
  <% if user_signed_in? %>
    <div class="control">
      <%= link_to "Edit Entry", edit_diary_entry_path(@diary_entry), 
          class: "button is-primary is-medium" %>
    </div>
    <div class="control">
      <%= link_to "Delete Entry", diary_entry_path(@diary_entry), 
          method: :delete, 
          class: "button is-danger is-medium",
          data: { 
            confirm: "Are you sure you want to delete this diary entry? This action cannot be undone." 
          } %>
    </div>
  <% else %>
    <!-- Demo mode - show sign up encouragement -->
    <div class="control">
      <%= link_to "Start Your Own Diary - Sign Up Free!", new_user_registration_path, 
          class: "button is-primary is-medium" %>
    </div>
  <% end %>
  <div class="control">
    <%= link_to "Back to All Entries", diary_entries_path, 
        class: "button is-light is-medium" %>
  </div>
</div>
