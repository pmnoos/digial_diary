<section class="section">
  <div class="container">
    <!-- Hero Section -->
    <div class="hero is-medium has-text-centered mb-6">
      <div class="hero-body">
        <h1 class="title is-1 has-text-primary">ðŸ“” Digital Diary</h1>
        <h2 class="subtitle is-3">Your thoughts, memories, and experiences - beautifully preserved</h2>
        <div class="buttons is-centered mt-5">
          <%= link_to "Start Free Trial", new_user_registration_path, class: "button is-primary is-large" %>
          <%= link_to "View Live Demo", diary_entries_path, class: "button is-success is-large" %>
          <%= link_to "See Pricing", pricing_subscriptions_path, class: "button is-link is-large" %>
        </div>
        
        <!-- Demo Login Credentials -->
        <div class="notification is-success is-light mt-5">
          <div class="content has-text-centered">
            <h4 class="title is-4">ðŸ”‘ Try Demo Login</h4>
            <p class="subtitle is-5">Want to see the full experience? Log in with our demo account!</p>
            <div class="box has-background-white mt-3" style="max-width: 400px; margin: 0 auto;">
              <div class="field">
                <label class="label">Email</label>
                <div class="control has-icons-left">
                  <input class="input" type="text" value="demo@digitaldiaryapp.com" readonly onclick="this.select()">
                  <span class="icon is-small is-left">
                    <i class="fas fa-envelope"></i>
                  </span>
                </div>
              </div>
              <div class="field">
                <label class="label">Password</label>
                <div class="control has-icons-left">
                  <input class="input" type="text" value="demopassword123" readonly onclick="this.select()">
                  <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                  </span>
                </div>
              </div>
              <div class="field mt-4">
                <%= link_to "Login with Demo Account", new_user_session_path(demo: true), 
                    class: "button is-success is-medium is-fullwidth", 
                    id: "demo-login-btn" %>
              </div>
              <p class="help has-text-grey is-size-7 mt-2">
                Click fields above to copy â€¢ Experience all features with sample data
              </p>
            </div>
          </div>
        </div>
        
        <!-- Demo Stats Preview -->
        <div class="notification is-primary is-light mt-5">
          <div class="content has-text-centered">
            <h4 class="title is-4">ðŸŽ¯ What You'll See in the Demo</h4>
            <p>Explore a real diary with <strong><%= @total_demo_entries %> actual entries</strong> to see exactly how Digital Diary works!</p>
            <div class="columns is-mobile has-text-centered mt-3">
              <div class="column">
                <p class="title is-5 has-text-primary"><%= @total_demo_entries %></p>
                <p class="subtitle is-6">Demo Entries</p>
              </div>
              <div class="column">
                <p class="title is-5 has-text-info">
                  <%= @demo_entries&.joins(:images_attachments)&.distinct&.count || 0 %>
                </p>
                <p class="subtitle is-6">With Photos</p>
              </div>
              <div class="column">
                <p class="title is-5 has-text-success">Real Data</p>
                <p class="subtitle is-6">Not Fake!</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Features Section -->
    <div class="columns is-multiline mb-6">
      <div class="column is-4">
        <div class="box has-text-centered">
          <span class="icon is-large has-text-primary">
            <i class="fas fa-pen-fancy fa-2x"></i>
          </span>
          <h3 class="title is-4 mt-3">Rich Text Editor</h3>
          <p>Write with style using our advanced rich text editor with formatting, images, and more.</p>
        </div>
      </div>
      <div class="column is-4">
        <div class="box has-text-centered">
          <span class="icon is-large has-text-primary">
            <i class="fas fa-images fa-2x"></i>
          </span>
          <h3 class="title is-4 mt-3">Photo Galleries</h3>
          <p>Attach multiple images to your entries and view them in beautiful gallery layouts.</p>
        </div>
      </div>
      <div class="column is-4">
        <div class="box has-text-centered">
          <span class="icon is-large has-text-primary">
            <i class="fas fa-search fa-2x"></i>
          </span>
          <h3 class="title is-4 mt-3">Search & Archive</h3>
          <p>Find any memory instantly with powerful search and organize by year, mood, and tags.</p>
        </div>
      </div>
    </div>

    <!-- Demo Entries Preview -->
    <% if @demo_entries&.any? %>
      <div class="block">
        <h2 class="title is-3 has-text-centered mb-5">Sample Diary Entries</h2>
        <div class="columns is-multiline">
          <% @demo_entries.first(3).each do |entry| %>
            <div class="column is-4">
              <div class="card">
                <div class="card-content">
                  <div class="media">
                    <div class="media-content">
                      <p class="title is-5"><%= link_to entry.title, diary_entry_path(entry), class: "has-text-dark" %></p>
                      <p class="subtitle is-6 has-text-grey"><%= entry.entry_date.strftime("%A, %d %B %Y") %></p>
                    </div>
                  </div>
                  <div class="content">
                    <%= truncate(strip_tags(entry.content.body.to_s), length: 100) %>
                    <% if entry.images.attached? %>
                      <br><span class="tag is-light"><i class="fas fa-images"></i> <%= pluralize(entry.images.count, 'photo') %></span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="has-text-centered mt-4">
          <%= link_to "View All #{@total_demo_entries} Demo Entries", diary_entries_path, class: "button is-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</section>
    </div>
    <nav class="navbar is-light mb-5" role="navigation" aria-label="main navigation">
      <div class="navbar-menu is-active">
        <div class="navbar-start">
          <a class="navbar-item" href="<%= diary_entries_path %>">Entries</a>
          <a class="navbar-item" href="<%= new_diary_entry_path %>">New Entry</a>
          <a class="navbar-item" href="<%= archive_path %>">Archive</a>
        </div>
      </div>
    </nav>
    <% if user_signed_in? %>
      <div class="has-text-centered  mt-4">
        <%= button_to "Delete My Account", registration_path(:user), method: :delete, data: { confirm: "Are you sure you want to delete your account? This cannot be undone." }, class: "button is-danger is-light" %>
      </div>
    <% end %>
  </div>
</section>
