<h1>Tags</h1>

<%= link_to "New Tag", new_tag_path, class: "button is-primary mb-3" %>

<table class="table is-striped is-fullwidth">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to "Show", tag_path(tag), class: "button is-small" %></td>
        <td><%= link_to "Edit", edit_tag_path(tag), class: "button is-small" %></td>
        <td>
          <%= link_to "Delete", tag_path(tag), method: :delete, data: { confirm: "Are you sure?" }, class: "button is-danger is-small" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>