<figure class="attachment attachment--<%= blob.representable? ? "preview" : "file" %> attachment--<%= blob.filename.extension %>">
  <% if blob.representable? %>
    <% begin %>
      <%= image_tag blob.representation(resize_to_limit: local_assigns[:in_gallery] ? [ 800, 600 ] : [ 1024, 768 ]), 
          style: "max-width: 100%; height: auto;",
          loading: "lazy",
          onerror: "this.style.display='none'; this.nextElementSibling.style.display='block';" %>
      <div style="display: none; padding: 1rem; background: #f5f5f5; text-align: center; border-radius: 4px;">
        <p><strong>Image processing failed</strong></p>
        <p class="is-size-7">File: <%= blob.filename %></p>
        <%= link_to "Download original", rails_blob_path(blob, disposition: "attachment"), class: "button is-small is-link" %>
      </div>
    <% rescue => e %>
      <div style="padding: 1rem; background: #ffebee; border: 1px solid #f44336; border-radius: 4px; text-align: center;">
        <p class="has-text-danger"><strong>Unable to process image</strong></p>
        <p class="is-size-7">Error: <%= e.message %></p>
        <%= link_to "Download original", rails_blob_path(blob, disposition: "attachment"), class: "button is-small is-link" %>
      </div>
    <% end %>
  <% end %>

  <figcaption class="attachment__caption">
    <% if caption = blob.try(:caption) %>
      <%= caption %>
    <% else %>
      <span class="attachment__name"><%= blob.filename %></span>
      <span class="attachment__size"><%= number_to_human_size blob.byte_size %></span>
    <% end %>
  </figcaption>
</figure>
