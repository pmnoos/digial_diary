#!/bin/bash

# Railway deployment script for Rails app with Nixpacks
echo "ğŸš‚ Starting Railway deployment with Nixpacks..."

# Set environment variables for Rails
export RAILS_ENV=production
export RAILS_SERVE_STATIC_FILES=true
export RAILS_LOG_TO_STDOUT=true
export DISABLE_SPRING=1

# Check if we have all required environment variables
if [ -z "$RAILS_MASTER_KEY" ]; then
  echo "âŒ RAILS_MASTER_KEY is not set!"
  exit 1
fi

if [ -z "$DATABASE_URL" ] && [ -z "$PGHOST" ]; then
  echo "âŒ No database configuration found!"
  exit 1
fi

echo "âœ… Environment variables check passed"

# Ensure we're using the production bundle
echo "ğŸ“¦ Checking bundle configuration..."
bundle config set --local deployment 'true'
bundle config set --local without 'development test'

# Create the database if it doesn't exist and run migrations
echo "ğŸ—„ï¸ Preparing database..."
bundle exec rails db:prepare 2>/dev/null || {
  echo "ğŸ”„ Database prepare failed, trying create and migrate..."
  bundle exec rails db:create 2>/dev/null || echo "Database might already exist"
  bundle exec rails db:migrate || {
    echo "âŒ Database migration failed!"
    exit 1
  }
}

echo "âœ… Database is ready"

# Test basic Rails connectivity
echo "ğŸ” Testing Rails application..."
timeout 30 bundle exec rails runner "Rails.application.eager_load!; puts 'âœ… Rails app loads successfully'" || {
  echo "âŒ Rails app failed to load!"
  exit 1
}

# Start the Rails server with proper binding
echo "ğŸš€ Starting Rails server on 0.0.0.0:$PORT..."
exec bundle exec rails server -b 0.0.0.0 -p ${PORT:-3000}
